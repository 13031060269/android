<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_person_info">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="18dp"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:text="学历"
            android:textColor="@color/operator_text_color"
            android:textSize="14sp" />

        <com.hfax.ucard.widget.FlowLayout
            android:id="@+id/flowLayout_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/HorizontalLineStyleGray_1dp"
            android:layout_marginLeft="24dp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="18dp"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:text="婚姻状况"
            android:textColor="@color/operator_text_color"
            android:textSize="14sp" />

        <com.hfax.ucard.widget.FlowLayout
            android:id="@+id/flowLayout_marriage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:paddingBottom="28dp" />

    </LinearLayout>
</merge>
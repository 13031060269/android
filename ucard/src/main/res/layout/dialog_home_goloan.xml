<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_centerInParent="true"
        android:background="#FFF"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#9AA5C6"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名信息及授权"
                android:textColor="#FFFFFFFF"
                android:layout_centerInParent="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:src="@drawable/dialog_close"
                android:padding="10dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="33dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_home_dialog_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:paddingRight="54dp"
            android:gravity="center"
            android:text="为保证您的信息安全，请仔细阅读并确认惠域U卡如下协议"
            android:textColor="#FF363349"
            android:paddingBottom="14dp"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/cb"
            android:layout_marginLeft="49dp"
            android:layout_width="wrap_content"
            android:text="全部同意"
            android:textSize="12sp"
            android:textColor="#F0872B"
            android:button="@null"
            android:drawableLeft="@drawable/cb_home_dilaog"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lv_dialog"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="49dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:listSelector="#0000"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击“同意协议并确认授权”意味着，我已阅读并同意所有相关协议"
            android:textColor="#FFB1B1B6"
            android:paddingLeft="71dp"
            android:paddingRight="71dp"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="21dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF59C4E"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="同意协议并确认授权"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </LinearLayout>

    <com.hfax.app.widget.LoadingView
        android:visibility="invisible"
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/toast_shape"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_toast"
        android:textColor="#FFF"
        android:layout_height="wrap_content" />
</RelativeLayout>
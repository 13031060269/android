<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_add_root"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/shape_add_bankcard_around"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_add_bankcard" />

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="添加信用卡"
            android:textColor="#FF666666"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:includeFontPadding="false"
        android:visibility="gone"
        android:id="@+id/tv_add_bank_haved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="11dp"
        android:layout_marginTop="-10dp"
        android:drawableLeft="@drawable/icon_addcard_haved"
        android:drawablePadding="6dp"
        android:padding="10dp"
        android:text="添加信用卡"
        android:textColor="#FF978D6E"
        android:textSize="12sp" />
</LinearLayout>
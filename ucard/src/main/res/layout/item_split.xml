<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_1"
            android:layout_width="33dp"
            android:layout_height="17dp"
            android:text="金额 1"
            android:textColor="#FFB1B1B6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_money_1"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/tv_text_1"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/tv_text_1"
            android:text="4500.00"
            android:textColor="#FF97979C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_text_1"
            android:layout_alignParentRight="true"
            android:text="·已还"
            android:textColor="#FF97979C"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fine_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_money_1"
            android:layout_below="@+id/tv_money_1"
            android:layout_marginTop="4dp"
            android:text="(含罚息 20.00)"
            android:textColor="#FFDF6545"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>
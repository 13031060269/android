<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <com.hfax.ucard.widget.CeilingScroll
        android:id="@+id/dredge_deposit_ceiling_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_edittext_username" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:background="#cacaca" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.hfax.ucard.widget.ClearEditText
                        android:id="@+id/et_dredge_deposit_username"
                        style="@style/EditTextStyle"
                        android:hint="请输入真实姓名，核实后不可修改"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/tv_dredge_deposit_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:textColor="#cacaca"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/HorizontalLineStyleGray_1dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_edittext_idcard" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:background="#cacaca" />

                <LinearLayout
                    android:id="@+id/ll_deposit_select_idtype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dredge_deposit_userid_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#cacaca"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_deposit_idtype_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_select_idtype_more" />
                </LinearLayout>


                <com.hfax.ucard.widget.ClearEditText
                    android:id="@+id/et_dredge_deposit_idcard"
                    style="@style/EditTextStyle"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:hint="请输入证件号码，核实后不可修改"
                    android:inputType="text"
                    android:maxLength="18" />

                <TextView
                    android:id="@+id/tv_dredge_deposit_userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#cacaca"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                style="@style/HorizontalLineStyleGray_1dp"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_dredge_deposit_bankcard_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icon_edittext_bankcard" />

                <View
                    android:id="@+id/v_dredge_deposit_bankcard_v"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/iv_dredge_deposit_bankcard_img"
                    android:background="#cacaca" />

                <ImageView
                    android:id="@+id/iv_dredge_deposit_bankcard_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/v_dredge_deposit_bankcard_v"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_bankcard_logo_placeholder" />

                <RelativeLayout
                    android:id="@+id/rl_bankcard_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_dredge_deposit_bankcard_image">

                    <com.hfax.ucard.widget.ClearEditText
                        android:id="@+id/et_dredge_deposit_bankcard"
                        style="@style/EditTextStyle"
                        android:hint="请输入本人储蓄卡卡号"
                        android:inputType="number"
                        android:maxLength="23" />

                    <TextView
                        android:id="@+id/tv_dredge_deposit_bankcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_dredge_deposit_bankcard_limitinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_bankcard_num"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/iv_dredge_deposit_bankcard_image"
                    android:textColor="#8F8E94"
                    android:textSize="11sp" />
            </RelativeLayout>

            <View
                style="@style/HorizontalLineStyleGray_1dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_edittext_phone" />

                <View
                    android:id="@+id/v_login_password"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:background="#cacaca" />

                <com.hfax.ucard.widget.ClearEditText
                    android:id="@+id/et_dredge_deposit_phone"
                    style="@style/EditTextStyle"
                    android:hint="银行预留手机号"
                    android:inputType="number"
                    android:maxLength="11" />
            </LinearLayout>


            <View
                style="@style/HorizontalLineStyleGray_1dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_dredge_deposit_select_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_icon_deposit_protocol_select"
                    android:gravity="center_vertical"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tv_dredge_deposit_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="1dp"
                    android:textColor="#8F8E94"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dredge_deposit_next"
                style="@style/ButtonStyle"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="30dp"
                android:text="下一步" />

        </LinearLayout>
    </com.hfax.ucard.widget.CeilingScroll>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_title_return"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="24dp"
        android:src="@drawable/selector_backone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="密码登录"
        android:textColor="#FF363349"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <com.hfax.ucard.widget.DelOrPWDEditText
            android:id="@+id/et_phone"
            style="@style/EditTextDefaultStyle"
            android:layout_width="match_parent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#444757"
            app:del="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFEBEBEB" />

        <com.hfax.ucard.widget.DelOrPWDEditText
            android:id="@+id/et_pwd"
            style="@style/EditTextDefaultStyle"
            android:layout_width="match_parent"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#444757"
            app:del="true"
            app:pwd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFEBEBEB" />

    </LinearLayout>


    <View
        android:id="@+id/v_login_v1"
        style="@style/HorizontalLineStyleGray_1dp"
        android:layout_below="@+id/ll_login_phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />


    <TextView
        android:id="@+id/tv_login"
        style="@style/ButtonCornerStyle"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_btn_important"
        android:enabled="false"
        android:text="登录" />

    <TextView
        android:id="@+id/tv_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="75dp"
        android:padding="10dp"
        android:text="忘记密码？"
        android:textColor="#565969"
        android:textSize="13sp" />

</LinearLayout>
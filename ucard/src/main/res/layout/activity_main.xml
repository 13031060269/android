<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hfax.ucard.widget.NoScrollViewPager
            android:id="@+id/view_pager_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#efefef" />

        <RadioGroup
            android:id="@+id/rg_main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:background="#FDFDFD"
            android:paddingTop="6dp">

            <RadioButton
                android:id="@+id/rb_main_borrow"
                style="@style/MainMenu"
                android:checked="true"
                android:drawableTop="@drawable/icon_tab_homepage_selector"
                android:text="借款" />

            <RadioButton
                android:id="@+id/rb_main_h5"
                style="@style/MainMenu"
                android:drawableTop="@drawable/icon_tab_discover_selector"
                android:text="发现" />

            <RadioButton
                android:id="@+id/rb_main_mine"
                style="@style/MainMenu"
                android:drawableTop="@drawable/icon_tab_user_selector"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>

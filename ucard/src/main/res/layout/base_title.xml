<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_title_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/selector_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title_right"
        android:layout_centerHorizontal="true"
        android:maxLength="15"
        android:maxLines="1"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="标题"
        android:textColor="#363349"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:text="登录"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_title_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_phone_black"
        android:visibility="invisible" />

    <View
        android:id="@+id/v_title_divider_"
        style="@style/HorizontalLineStyleGray_1dp"
        android:layout_below="@+id/tv_title"
        android:visibility="gone" />
</RelativeLayout>
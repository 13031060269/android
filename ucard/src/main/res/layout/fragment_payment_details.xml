<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/layout_title"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_payment_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#0000"
            android:dividerHeight="4dp"
            android:listSelector="#00000000"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:scrollbars="none" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_total_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="17dp"
                android:text="还款总额"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <com.hfax.ucard.widget.CusTextView
                android:id="@+id/tv_payment_money"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBaseline="@+id/tv_total_amount_text"
                android:layout_toRightOf="@+id/tv_total_amount_text"
                android:text="0.00"
                android:textColor="#FF3A3C48"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_youhui"
                android:visibility="gone"
                android:layout_alignLeft="@+id/tv_total_amount_text"
                android:layout_below="@+id/tv_payment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="11sp"
                android:textColor="#686868"
                android:text="息费可优惠100.00" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_default"
            android:enabled="false"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_image_verification_bg">

    <TextView
        android:id="@+id/tv_dialog_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="17dp"
        android:text="输入验证码"
        android:textColor="#1e4063"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_dialog_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_tv1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/iv_dialog_imagecode"
        android:background="#ecf0f1"
        android:hint="请输入图片中的文字"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:textColorHint="#d8d8d8"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_dialog_imagecode"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_dialog_tv1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/v_dialog_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_dialog_code"
        android:layout_marginTop="20dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_dialog_v1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_imagecode_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="取消"
            android:textColor="#a0aebd"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_dialog_code"
            android:background="#f1f1f1" />

        <TextView
            android:id="@+id/tv_dialog_imagecode_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="确定"
            android:textColor="#ff4f01"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
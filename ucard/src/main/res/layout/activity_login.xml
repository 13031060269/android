<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hfax.ucard.widget.AutoImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_home_pic"
            app:heightWeight="486"
            app:widthWeight="750" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_bg"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="48dp"
            android:text="登录 / 注册"
            android:textColor="#FF444757"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_bg"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="若您尚未注册，输入验证码后系统将自动为您注册平台账号"
            android:textColor="#FFA8ADC7"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:src="@drawable/login_close" />

        <TextView
            android:id="@+id/tv_goto_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="21dp"
            android:text="密码登录"
            android:textColor="#FF565969"
            android:textSize="14sp" />
    </RelativeLayout>


    <com.hfax.ucard.widget.DelOrPWDEditText
        android:id="@+id/et_phone"
        style="@style/EditTextDefaultStyle"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="32dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="15sp"
        app:del="true" />

    <View
        android:id="@+id/v_login_v1"
        style="@style/HorizontalLineStyleGray_1dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="26dp"
        android:background="#EBEBEB" />

    <TextView
        android:id="@+id/tv_next"
        style="@style/ButtonCornerStyle"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/selector_btn_important"
        android:clickable="true"
        android:enabled="false"
        android:text="获取短信验证码" />
</LinearLayout>
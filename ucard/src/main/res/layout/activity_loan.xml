<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/base_title" />

    <com.hfax.ucard.widget.HfaxScrollView
        android:id="@+id/hsl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="54dp"
        android:paddingTop="30dp"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:id="@+id/ll_tip_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp">

                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="借款申请信息"
                    android:textColor="#3A3C48"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_sub_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="24dp"
                    android:text="该结果仅供参考，以实际放款为准"
                    android:textColor="#B1B1B6"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:background="#FAFAFA"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_card_logo"
                        android:layout_width="35dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="81dp"
                        android:src="@drawable/icon_ucard" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="申请金额(元)"
                            android:textColor="#FF363349"
                            android:textSize="13sp" />

                        <com.hfax.ucard.widget.CusTextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="#FF363349"
                            android:textSize="30sp"
                            tools:text="7000.00" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_loan_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款期限"
                        android:textColor="#FFB1B1B6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_loan_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="#FF363349"
                        tools:text="3个月"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:background="#EFEFEF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月还款额"
                        android:textColor="#FFB1B1B6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_loan_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="#FF363349"
                        tools:text="500.00"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/HorizontalLineStyleGray_1dp" />

            <LinearLayout
                android:id="@+id/ll_card_choosed"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_bank_bg"
                android:gravity="center_vertical"
                android:visibility="gone">

                <com.hfax.ucard.widget.BankCardImageView
                    android:id="@+id/iv_choose_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:id="@+id/tv_choose_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_choose_bankInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/cb_bank_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_change_bankcard_1"
                    android:button="@null"
                    android:drawableRight="@drawable/selector_bank_list"
                    android:drawablePadding="4dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="切换银行卡"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_bg"
                android:divider="@color/sobot_transparent"
                android:dividerHeight="0dp"
                android:listSelector="@color/sobot_transparent"
                android:visibility="gone" />

            <include
                android:id="@+id/add_bank"
                layout="@layout/card_list_foot_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </com.hfax.ucard.widget.HfaxScrollView>


    <include
        android:id="@+id/ic_tip"
        layout="@layout/layout_info_head"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_below="@+id/rl_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <CheckBox
                android:id="@+id/cb_select_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_icon_protocol_select"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="#8F8E94"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            style="@style/ButtonCornerStyle"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:enabled="false"
            android:text="确认提交"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
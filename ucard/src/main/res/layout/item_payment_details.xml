<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/repaid_pic"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:paddingBottom="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/repayTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:text="5000.00"
        android:textColor="#FF3A3C48"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_total_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="应还总额"
        android:textColor="#B1B1B6"
        android:layout_below="@+id/repayTotal"
        android:layout_alignLeft="@+id/repayTotal"
        android:layout_marginBottom="9dp"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_fine_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        tools:text="(含罚息 25.00   可减免10元)"
        android:layout_alignLeft="@+id/repayTotal"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_total_amount_text"
        android:textColor="#FFDF6545"
        android:visibility="gone"
        android:textSize="10sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_fine_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:includeFontPadding="false"
        android:gravity="center"
        tools:text="红包已优惠80元"
        android:drawableRight="@drawable/redwallet_icon"
        android:layout_alignLeft="@+id/repayTotal"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_total_amount_text"
        android:textColor="#FFDF6545"
        android:drawablePadding="8dp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/repayPlanDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/repayTotal"
        android:text="2018.01.13"
        android:textColor="#98989E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_total_amount_text"
        android:layout_alignLeft="@+id/repayPlanDate"
        android:layout_marginTop="11dp"
        android:text="还款日期"
        android:textColor="#FFB1B1B6"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/repayStatusName"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:background="#FF6A91FE"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="还款中"
        android:textColor="#FFFFFFFF"
        android:layout_alignBottom="@+id/tv_total_amount_text"
        android:layout_toRightOf="@+id/tv_date_text"
        android:layout_marginLeft="64dp"
        android:textSize="10sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/include_modify_title"
        layout="@layout/base_title" />

    <View
        android:id="@+id/v_change_loginpassword_v_title"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/segment_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="原登录密码"
            android:textColor="@color/operator_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_modify_oldPassword"
            style="@style/EditTextStyle"
            android:hint="请输入原登录密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/HorizontalLineStyleGray_1dp"
            android:layout_marginLeft="24dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="新登录密码"
            android:textColor="@color/operator_text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_modify_newPassword"
            style="@style/EditTextStyle"
            android:hint="请输入新登录密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <View style="@style/HorizontalLineStyleGray_1dp" />

    <TextView
        android:enabled="false"
        android:id="@+id/tv_modify_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/selector_btn_important"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
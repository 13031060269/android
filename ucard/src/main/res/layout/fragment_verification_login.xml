<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_title_return"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="24dp"
        android:src="@drawable/selector_backone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="验证码登录"
        android:textColor="#FF363349"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="32dp">

        <EditText
            android:id="@+id/et_code"
            style="@style/EditTextDefaultStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入手机验证码" />

        <TextView
            android:id="@+id/tv_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_verify_round"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text="获取验证码"
            android:textColor="#F78B2F"
            android:textSize="13sp" />

    </LinearLayout>


    <View
        android:id="@+id/v_login_v1"
        style="@style/HorizontalLineStyleGray_1dp"
        android:layout_below="@+id/ll_login_phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/tv_go_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="57dp"
        android:drawableRight="@drawable/icon_go_verification"
        android:drawablePadding="6dp"
        android:text="密码登录"
        android:textColor="#F78B2F"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_login_v1"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/login_tip"
        android:textColor="@color/login_tip_color"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/ButtonCornerStyle"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="122dp"
        android:background="@drawable/selector_btn_important"
        android:enabled="false"
        android:text="登录" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/selector_card_item_bg"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal">

        <com.hfax.ucard.widget.BankCardImageView
            app:widthRound_color="@color/bankcard_list_bg"
            android:id="@+id/bank_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp" />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:textColor="#FF363349"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:background="#FFD8D8D8" />

        <TextView
            android:id="@+id/bank_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="尾号2343"
            android:textColor="#FF363349"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:background="@drawable/selector_circular"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>
</RelativeLayout>